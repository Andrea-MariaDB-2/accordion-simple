{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2018",
    "lib": [
      "dom",
      "ES2020"
    ],
    "paths": {
      "@ngx-dummy/accordion-simple/*": [
        "projects/@ngx-dummy/accordion-simple/src/lib/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}