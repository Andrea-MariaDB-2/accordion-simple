{
	"extends": ["stylelint-config-standard", "stylelint-config-sass-guidelines", "stylelint-config-idiomatic-order", "stylelint-prettier/recommended"],
	"plugins": ["stylelint-declaration-use-variable", "stylelint-prettier", "stylelint-order"],
	"ignoreFiles": ["**/src/scss/vendor/**/*.scss"],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": ["extends", "ignores", "include", "mixin", "extend", "if", "else", "each", "warn", "function", "return", "for"]
			}
		],
		"sh-waqar/declaration-use-variable": [
			[
				"/color/",
				"fill",
				"font-size",
				"font-family",
				"z-index",
				{
					"ignoreValues": ["transparent", "inherit", "/rgba(.*)/"]
				}
			]
		],
		"selector-pseudo-element-no-unknown": [
			true,
			{
				"ignorePseudoElements": ["ng-deep"]
			}
		],
		"declaration-block-no-duplicate-properties": [
			true,
			{
				"ignore": ["consecutive-duplicates-with-different-values"]
			}
		],
		"max-nesting-depth": 4,
		"max-line-length": 155,
		"string-quotes": "single",
		"selector-max-compound-selectors": 5,
		"selector-class-pattern": "^(?:(?:o|c|u|t|s|is|has|_|js|qa)-)?[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*(?:__[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*)?(?:--[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*)?(?:\\[.+\\])?$",
		"order/order": ["custom-properties", "declarations"],
		"order/properties-alphabetical-order": true,
		"no-descending-specificity": true,
		"no-duplicate-at-import-rules": true,
		"no-duplicate-selectors": true,
		"rule-empty-line-before": [
			"always-multi-line",
			{
				"except": ["first-nested"],
				"ignore": ["after-comment"]
			}
		],
		"prettier/prettier": true
	}
}
