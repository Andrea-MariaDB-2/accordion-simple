{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../../out-tsc/lib",
    "declarationMap": true,
    "declaration": true,
    "inlineSources": true,
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "exclude": [
    "src/helpers/*",
    "src/test.ts",
    "**/*.spec.ts"
  ],
  "include": [
    "src/lib/*"
  ]
}